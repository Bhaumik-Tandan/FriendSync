{
  "expo": {
    "name": "FriendSync",
    "slug": "friendsync",
    "version": "1.2.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.friendSync.friendSync",
      "buildNumber": "6"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_CONTACTS"
      ],
      "package": "com.friendSync.friendSync",
      "versionCode": 6
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "091b722f-f546-4cb2-8280-d5af562d9561"
      }
    },
    "plugins": [
      [
        "expo-contacts",
        {
          "contactsPermission": "We need access to your contacts to make it easier for you to invite friends to events and share contact information with others. Your contacts will not be shared with any third parties and will only be used for in-app function of  looking up friends' information."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "To select your contact's profile picture, we require access to your gallery.",
          "cameraPermission": "To capture a new profile picture for your contact, we need access to your camera."
        }
      ]      
    ],
    "owner": "friendsync"
  },
  "react-native-google-mobile-ads": {
    "android_app_id": "ca-app-pub-5499479031752321~1739626539",
    "ios_app_id": "ca-app-pub-5499479031752321~2114977158"
  }
}
